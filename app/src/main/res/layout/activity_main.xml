<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".view.main.MainActivity"
                                                   android:background="@drawable/squid_bg"
                                                   android:id="@+id/linearLayout">
    <TextView
            android:id="@+id/text_main_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/applesdgothicneom"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="32dp"
            android:text="2019년 7월 1일"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.9" app:layout_constraintVertical_bias="0.25"/>

    <TextView
            android:id="@+id/text_main1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/applesdgothicneom"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24dp"
            android:text="당신의 가치는"
            app:layout_constraintRight_toRightOf="@id/text_main_date"
            app:layout_constraintTop_toBottomOf="@id/text_main_date"
    />

    <View
            android:layout_width="130dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintRight_toRightOf="@id/text_main_date"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/text_main1"
    />

    <TextView
            android:id="@+id/text_main_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/applesdgothicneom"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40dp"
            android:layout_marginTop="10dp"
            android:text="원 입니다"
            app:layout_constraintRight_toRightOf="@id/text_main_date"
            app:layout_constraintTop_toBottomOf="@id/text_main1"
    />

    <TextView
            android:id="@+id/text_main_perkg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/applesdgothicneom"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:text="*물오징어(국산) 수입가 kg당 "
            app:layout_constraintRight_toRightOf="@id/text_main_date"
            app:layout_constraintTop_toBottomOf="@id/text_main_value"
    />

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/text_reference"
            android:fontFamily="@font/applesdgothicneom"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:text="*자료출처-가락시장 농수산물 도매가"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
    />


</androidx.constraintlayout.widget.ConstraintLayout>